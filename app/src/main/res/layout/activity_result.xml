<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="solution.b_still.co.b_still.Result">

    <LinearLayout
        android:id="@+id/rootViewResult"
        style="@style/rootView">

        <TextView
            android:id="@+id/descriptionTextView"
            style="@style/TextViewDesc"
            android:textSize="@dimen/big_title_font_size"
            android:layout_margin="@dimen/margin" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/resultColor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:civ_border_color="#00000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/resultTextView"
            style="@style/TextViewDesc"
            android:layout_margin="@dimen/margin"/>

        <Button
            android:id="@+id/goToGraph"
            style="@style/buttonStyle"
            android:text="@string/goToGraphButton"/>

    </LinearLayout>

</ScrollView>
